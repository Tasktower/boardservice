{
  "AppName": "Tasktower.ProjectService.Tests",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Errors": {
    "UseStackTrace": true,
    "ShowAllErrorMessages": true,
    "ErrorCodeMappings": {
      "MultipleErrors": {
        "StatusCode": 400,
        "Message": "You have multiple errors"
      },
      "OptimisticLocking": {
        "StatusCode": 409,
        "Message": "Optimistic locking"
      },
      "ProjectIdNotFound": {
        "StatusCode": 404,
        "Message": "Project with id {0} not found"
      },
      "NoProjectPermissions": {
        "StatusCode": 403,
        "Message": "You do not have the necessary permissions to access the project with id {0}"
      },
      "NonExistentColumn": {
        "StatusCode": 400,
        "Message": "You can't move a task to a non-existing column"
      }
    }
  }
}

{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Errors": {
    "ErrorCodeMappings": {
      "MULTIPLE_ERRORS": {
        "StatusCode": 400, 
        "Message": "You have multiple errors"
      },
      "NO_PROJECT_PERMISSIONS": {
        "StatusCode": 403,
        "Message": "You do not have the necessary permissions to access your project feature"
      },
      "PROJECT_NOT_FOUND": {
        "StatusCode": 404,
        "Message": "Project not found."
      },
      "NON_EXISTENT_COLUMN": {
        "StatusCode": 400,
        "Message": "You can't move a task to a non-existing column"
      }
    }
  }
}

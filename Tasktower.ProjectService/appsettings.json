{
  "AppName": "Tasktower.ProjectService",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Errors": {
    "UseStackTrace": true,
    "LogAppErrors": false,
    "HandleNonAppErrors": false,
    "ErrorCodeMappings": {
      "MultipleErrors": {
        "StatusCode": 400, 
        "Message": "You have multiple errors"
      },
      "OptimisticLocking": {
        "StatusCode": 409,
        "Message": "Optimistic locking"
      },
      "UserNotFound": {
        "StatusCode": 404,
        "Message": "User not found"
      },
      "ProjectIdNotFound": {
        "StatusCode": 404,
        "Message": "Project with id {0} not found"
      },
      "NoProjectPermissions": {
        "StatusCode": 403,
        "Message": "You do not have the necessary permissions to access the project with id {0}"
      },
      "NonExistentColumn": {
        "StatusCode": 400,
        "Message": "You can't move a task to a non-existing column"
      }
    }
  },
  "ExternalServices": {
    "UserService": {
      "Url": "http://tasktower-user-service:80"
    }
  },
  "RabbitMqExchanges": {
    "DataUpdate": {
      "Type": "topic",
      "Durable": true,
      "AutoDelete": false,
      "RequeueFailedMessages": true,
      "Queues": [
        {
          "Name": "data.update.queue",
          "RoutingKeys": [ "user.*" ],
          "Durable": true,
          "AutoDelete": false,
          "Exclusive": false
        }
      ]
    }
  }
}

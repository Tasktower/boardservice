{
  "Logging": {
    "LogLevel": {
      "Default": "Error",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Errors": {
    "UseStackTrace": true,
    "ShowAllErrorMessages": false,
    "ErrorCodeMappings": {
      "MULTIPLE_ERRORS": {
        "StatusCode": 400, 
        "Message": "You have multiple errors"
      },
      "OPTIMISTIC_LOCKING": {
        "StatusCode": 409,
        "Message": "Optimistic locking"
      },
      "PROJECT_ID_NOT_FOUND": {
        "StatusCode": 404,
        "Message": "Project with id {0} not found"
      },
      "NO_PROJECT_PERMISSIONS": {
        "StatusCode": 403,
        "Message": "You do not have the necessary permissions to access the project with id {0}"
      },
      "NON_EXISTENT_COLUMN": {
        "StatusCode": 400,
        "Message": "You can't move a task to a non-existing column"
      }
    }
  }
}
